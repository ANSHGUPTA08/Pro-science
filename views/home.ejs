<%- include('partials/header'); -%>

<h1>Home</h1>
<p> <%= startingContent %> </p>

<% posts.forEach(function(post){ %>
<h1><%=  post.title %> </h1>
<% if(post.body.length>30){ %>
<%  var bodyShort = post.body.substring(0,29) + " ..."; %>
<% var readMore = "/posts/" + post.title; %>
<p> <%= bodyShort %> <a href= <%=readMore%> >Read More!</a> </p>
<% }else{ %>
<p> <%= post.body %> <a href= <%=readMore%>>Read More!</a> </p>
<% } %>
<% }); %>


<%- include('partials/footer'); -%>
